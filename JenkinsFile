pipeline {
    agent any

    tools {
        maven 'mavenj' // Nom de votre installation Maven configurée dans Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com.jam29/cover.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('sonarq4j') { // Nom de la configuration SonarQube dans Jenkins
                    sh 'mvn sonar:sonar'
                }
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                sh 'mvn spring-boot:run'
            }
        }
    }

    post {
        success {
            echo 'Build et analyse SonarQube réussis !'
        }
        failure {
            echo 'Le build ou l’analyse a échoué.'
        }
    }
}
